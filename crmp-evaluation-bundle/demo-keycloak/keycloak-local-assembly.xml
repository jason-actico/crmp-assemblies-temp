
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>keycloak-local</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/actico-export</directory>
      <outputDirectory>./demo-keycloak/actico-realm</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/actico-platform-theme</directory>
      <outputDirectory>./demo-keycloak/actico-platform-theme</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/local</directory>
      <outputDirectory>./demo-keycloak</outputDirectory>
      <includes>
        <include>*.txt</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/local</directory>
      <outputDirectory>./</outputDirectory>
      <includes>
        <include>*.bat</include>
      </includes>
    </fileSet>
    <fileSet>
      <!-- add empty downloads folder -->
      <directory>src/main</directory>
      <outputDirectory>./demo-keycloak/downloads</outputDirectory>
      <excludes>
        <exclude>*</exclude>
        <exclude>*/**</exclude>
      </excludes>
    </fileSet>
  </fileSets>
</assembly>


