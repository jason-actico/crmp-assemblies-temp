
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
  <id>keycloak-docker</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <fileSets>
    <fileSet>
      <directory>${project.build.directory}/docker</directory>
      <outputDirectory>./docker/demo-keycloak</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/actico-export</directory>
      <outputDirectory>./docker/demo-keycloak/actico-realm</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${project.build.directory}/actico-platform-theme</directory>
      <outputDirectory>./docker/demo-keycloak/actico-platform-theme</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
