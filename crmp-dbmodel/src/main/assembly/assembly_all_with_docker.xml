<assembly>
    <id>all-with-docker</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/docker/</directory>
            <outputDirectory>src/main/docker/</outputDirectory>
            <includes>
                <include>**</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/dbscripts/workplace-files/</directory>
            <outputDirectory>target/dbscripts/workplace-files/</outputDirectory>
            <includes>
                <include>**/workplace-mssql-database-create.ddl</include>
            </includes>
            <excludes>
            	<exclude>META-INF/**</exclude>
            </excludes> 
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>target/dbscripts/spr-files/</directory>
            <outputDirectory>target/dbscripts/spr-files/</outputDirectory>
            <includes>
                <include>**/workplace-mssql-database-collation.ddl</include>
            </includes>
            <excludes>
            	<exclude>META-INF/**</exclude>
            </excludes> 
            <fileMode>755</fileMode>
        </fileSet>
    </fileSets>
</assembly>
